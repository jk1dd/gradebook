<h1>Teachers#show</h1>
<p>Find me in app/views/teachers/show.html.erb</p>

<h1><%= @teacher.name %></h1>

<div class="teachers-courses">
  <% @teacher.courses.each do |course| %>
  <div class="course">
    <%= link_to course.name, teacher_course_path(@teacher.id, course.id) %>
    <% end %>
  </div>
</div>

<div class="btn">
  <%= link_to "Manage the courses of #{@teacher.name}", teacher_courses_path(@teacher) %>
</div>

<div class="btn">
  <%= link_to "Return to Teachers", teachers_path %>
</div>

<div class="btn">
  <%= link_to "Home", root_path %>
</div>
